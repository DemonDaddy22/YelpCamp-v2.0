<% layout('layouts/boilerplate.ejs') %>

    <div class='container d-flex flex-column flex-grow-1 align-items-center justify-content-center'>
        <div class='row w-lg-80 align-items-center'>
            <div class='col-12 col-md-4'>
                <img src='https://res.cloudinary.com/yelp-camp/image/upload/v1615890646/undraw_warning_cyit.svg'
                    alt='error template' class='img-fluid'>
            </div>
            <div class='col-12 col-md-8 mt-3 mt-md-0'>
                <div
                    class='container d-flex flex-column justify-content-center align-items-center align-items-md-start text-center text-md-start'>
                    <h1 class='text-primary error-status fst-italic'>
                        <%= statusCode %>
                    </h1>
                    <h2 class='text-dark'>
                        <%= message %>
                    </h2>
                    <p class='text-muted'>
                        <%= description %>
                    </p>
                    <div>
                        <a class='btn btn-outline-primary' href='/campgrounds'>All Campgrounds</a>
                    </div>
                </div>
            </div>
        </div>
    </div>