<% layout('layouts/boilerplate.ejs') %>
    <% block('head').append(`<title>Campground${campground?.title ? ` | ${campground.title}` : ''}</title>`) %>
        <div class="container mt-5 flex-grow-1">
            <div class='row'>
                <div class='col-6 offset-3'>
                    <div class='card mb-3'>
                        <img src='<%= campground?.image %>' class='card-img-top' alt='<%= campground?.title %>'>
                        <div class='card-body'>
                            <h5 class='card-title'>
                                <%= campground?.title %>
                            </h5>
                            <p class='card-text'>
                                <%= campground?.description %>
                            </p>
                        </div>
                        <ul class='list-group list-group-flush'>
                            <li class='list-group-item fst-italic'>
                                $<%= campground?.price %>/night
                            </li>
                            <li class='list-group-item text-muted'>
                                <%= campground?.location %>
                            </li>
                        </ul>
                        <div class='card-body d-flex'>
                            <a href='/campgrounds/<%= campground.id %>/edit'
                                class='btn btn-sm btn-warning me-2'>Edit</a>
                            <form action='/campgrounds/<%= campground.id %>?_method=DELETE' method='POST'>
                                <button class='btn btn-sm btn-danger'>Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>